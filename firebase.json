{
  "hosting": {
    "public": "src/server/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "**",
        "function": "ssrApp",
        "destination": "/"
    }]
  },
  "functions": {
    "source": "src/lib/functions"
  }
}