{
    "presets":[
        "@babel/preset-react",
        "@babel/preset-env"
    ],
    "env": {
        "development": {
            "plugins": [
                "transform-class-properties",
                "react-hot-loader/babel",
                "babel-plugin-transform-object-assign"
            ]
        }
    },
    "plugins": [
        "@babel/plugin-transform-runtime",
        "@babel/plugin-proposal-class-properties",
        "@loadable/babel-plugin"
    ],
    "ignore": [
        "./src/lib/functions/*.*",
        "./src/server/*.*"
    ]
}